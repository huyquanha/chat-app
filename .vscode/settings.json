{
  // VSCode shell has no knowledge of direnv/.envrc, so we need to
  // specify the relative path to the buildifier binary. The path
  // is relative to the workspace root.
  "bazel.buildifierExecutable": "bin/buildifier",
  "bazel.buildifierFixOnFormat": true,
  // This enables using a separate output base for running queries,
  // which doesn't block users' other Bazel operations.
  "bazel.queriesShareServer": false,
  "bazel.lsp.command": "starpls",
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.formatOnSaveMode": "file",
  "files.associations": {
    "*.bazelrc": "bazelrc"
  },
  "[go]": {
    "editor.defaultFormatter": "golang.go"
  },
  // Settings for go/bazel are based on editor setup instructions at
  // https://github.com/bazelbuild/rules_go/wiki/Editor-setup#visual-studio-code
  "go.goroot": "${workspaceFolder}/bazel-${workspaceFolderBasename}/external/rules_go++go_sdk+main___download_0/",
  "go.toolsManagement.autoUpdate": true,
  "go.toolsEnvVars": {
    "GOPACKAGESDRIVER": "${workspaceFolder}/tools/gopackagesdriver.sh"
  },
  "go.enableCodeLens": {
    "runtest": false
  },
  "gopls": {
    "build.workspaceFiles": ["**/BUILD", "**/*.{bzl,bazel}"],
    "build.directoryFilters": [
      "-bazel-bin",
      "-bazel-out",
      "-bazel-testlogs",
      "-bazel-chat-app"
    ],
    "formatting.gofumpt": true,
    "formatting.local": "github.com/huyquanha/chat-app",
    "ui.completion.usePlaceholders": true,
    "ui.semanticTokens": true,
    "ui.codelenses": {
      "gc_details": false,
      "regenerate_cgo": false,
      "generate": false,
      "test": false,
      "tidy": false,
      "upgrade_dependency": false,
      "vendor": false
    }
  },
  "go.useLanguageServer": true,
  "go.lintOnSave": "off",
  "go.vetOnSave": "off"
}
